<%= form_for :word, url: words_path do |f| %>
  <div class="form-group">
    <%= f.text_field :title, class: "form-control", placeholder: "Title", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.text_field :chinese, class: "form-control", placeholder: "chinese", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.text_field :pinyin, class: "form-control", placeholder: "pinyin", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.text_area :meaning, rows: 10, class: "form-control", placeholder: "meaning" %>
  </div>
  <div class="form-group">
    <%= f.text_area :exampleUsage, rows: 10, class: "form-control", placeholder: "example" %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
