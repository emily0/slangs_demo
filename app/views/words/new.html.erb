<div class="wrapper">
  <div class="wrapper-form">
    <%= form_for :word, url: words_path do |f| %>
      <div class="form-group">
        <%= f.collection_check_boxes :type_ids, Type.all, :id, :name do |cb| %>
          <%= cb.label(class: "checkbox-inline input_checkbox"){cb.check_box(class: "checkbox") + cb.text} %>
        <% end %>
      </div>
      <div class="form-group">
        <%= f.text_field :title, class: "form-control", placeholder: "Title", autofocus: true %>
      </div>
      <div class="form-group">
        <%= f.text_field :chinese, class: "form-control", placeholder: "chinese", autofocus: true %>
      </div>
      <div class="form-group">
        <%= f.text_field :pinyin, class: "form-control", placeholder: "pinyin", autofocus: true %>
      </div>
      <div class="form-group">
        <%= f.text_area :meaning, rows: 2, class: "form-control", placeholder: "meaning" %>
      </div>
      <div class="form-group">
        <%= f.text_area :exampleUsage, rows: 2, class: "form-control", placeholder: "example" %>
      </div>
      <div class="form-group">
        <%= f.number_field :funny, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit class: 'btn btn-primary btn-lg' %>
      </div>
    <% end %>
  </div>
</div>
