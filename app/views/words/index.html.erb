
  <div class="grid">
    <% @words.each do |word| %>
      <% if word.type == "87..." %>
        <div class="grid-item"><p><%= link_to word.title, word_path(word) %></p></div>
      <% elsif word.title == "520"%>
        <div class="grid-item grid-item--width3"><p><%= link_to word.title, word_path(word) %></p></div>
      <% elsif word.title == "test1"%>
        <div class="grid-item grid-item--height2"><p><%= link_to word.title, word_path(word) %></p></div>
      <% elsif word.title == "test2"%>
        <div class="grid-item grid-item--height3"><p><%= link_to word.title, word_path(word) %></p></div>
      <% elsif word.title == "DD"%>
        <div class="grid-item grid-item--width4"><p><%= link_to word.title, word_path(word) %></p></div>
      <% else %>
        <div class="grid-item grid-item--width2"><p><%= link_to word.title, word_path(word) %></p></div>
      <% end %>
    <% end %>

  </div>








  <ul>
    <% @words.each do |word| %>
      <% if word.title == "BJ4" %>
        <li class="item_wrapper_1"><%= link_to word.title, word_path(word) %></li>
      <% else %>
        <li class="item_wrapper"><%= link_to word.title, word_path(word) %></li>
      <% end %>
    <% end %>
  </ul>




<script>
// external js: masonry.pkgd.js

var grid = document.querySelector('.grid');
var msnry = new Masonry( grid, {
  columnWidth: 160
});

grid.addEventListener( 'click', function( event ) {
  // don't proceed if item was not clicked on
  if ( !matchesSelector( event.target, '.grid-item' ) ) {
    return;
  }
  // change size of item via class
  event.target.classList.toggle('grid-item--gigante');
  // trigger layout
  msnry.layout();
});

</script>
