<%= form_for(@type, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group">
    <%= f.text_field :name, class: "form-control", placeholder: "Type", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
